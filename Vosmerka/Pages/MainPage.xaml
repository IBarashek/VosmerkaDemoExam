<Page x:Class="Vosmerka.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vosmerka.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="TxbSearch" Text="Введите для поиска"/>
            <ComboBox x:Name="CmbSort" />
            <ComboBox x:Name="CmbFilter"/>
        </StackPanel>
        <ListView Grid.Row="1" >
            <ListView.ItemTemplate >
                <DataTemplate >
                    
                    <StackPanel Orientation="Horizontal">
                        <Image x:Name="ImgProduct"/>
                        <StackPanel>
                            <TextBlock x:Name="TxtTypeProduct"/>
                            <TextBlock x:Name="TxtNameProduct"/>
                            <TextBlock x:Name="TxtArticle"/>
                            <TextBlock x:Name="TxtMaterial"/>
                        </StackPanel>
                        <TextBlock x:Name="TxtCost"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
