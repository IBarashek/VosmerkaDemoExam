<Page x:Class="Vosmerka.Pages.UpdatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vosmerka.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UpdatePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="StpProduct" Grid.Column="1">
            <Label Content="Артикуль:"/>
            <TextBlock x:Name="TxtArticle"/>
            <Label Content="Название:"/>
            <TextBox x:Name="TxbName" />
            <Label Content="Цена:"/>
            <TextBox x:Name="TxbMinPrice"/>
            <Label Content="Тип продукта:"/>
            <ComboBox x:Name="CmbProductType" />
            <Label Content="Размер"/>
            <TextBox x:Name="TxbSize" />
            <Label Content="Вес с коробкой:"/>
            <TextBox x:Name="TxbWWithB"/>
            <Label Content="Вес без коробки:"/>
            <TextBox x:Name="TxbWWithoutB" />
            <Label Content="Изображение продукта:"/>
            <Image x:Name="ImgProduct" />
            <Label Content="Описание продукта:"/>
            <TextBox x:Name="TxbDescription" />
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BtnUpdate" Content="Изменить" Click="BtnClick"/>
                <Button x:Name="BtnDeletw" Content="Удалить" Click="BtnClick"/>
                <Button x:Name="BtnCreate" Content="Добавить" Click="BtnClick" HorizontalAlignment="Right"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
